datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Joke {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  text      String?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt            DateTime  @default(now())
  email                String?   @unique
  firstName            String?
  id                   String    @id @default(cuid())
  lastName             String?
  lastNotificationTime DateTime?
  notificationInterval Int?
  password             String
  roles                Json
  updatedAt            DateTime  @updatedAt
  username             String    @unique
}
